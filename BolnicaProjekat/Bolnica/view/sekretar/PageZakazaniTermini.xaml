<Page x:Class="Bolnica.view.sekretar.PageZakazaniTermini"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bolnica.view.sekretar"
      mc:Ignorable="d" 
      d:DesignHeight="708" d:DesignWidth="874"
      Title="PageZakazaniTermini">

    <Grid Background="#ccffbd">

        <DataGrid HorizontalAlignment="Left" Height="403" Margin="69,236,0,0" VerticalAlignment="Top" Width="732">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Lekar" Binding="{Binding Jmbg}" Width="*" />
                <DataGridTextColumn Header="Pacijent" Binding="{Binding Ime}" Width="*" />
                <DataGridTextColumn Header="Tip usluge" Binding="{Binding Prezime}" Width="*" />
                <DataGridTextColumn Header="Prostorija" Binding="{Binding Telefon}" Width="*" />
                <DataGridTextColumn Header="Vreme" Binding="{Binding Email}" Width="*" />
            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Zakazi termin" HorizontalAlignment="Left" Width="150px" Height="40px" VerticalAlignment="Top" Margin="69,51,0,0" Background="White" Click="ZakaziTermin_Click"/>
        <Button Content="Obrisi termin" HorizontalAlignment="Left"  Width="150px" Height="40px" VerticalAlignment="Top" Margin="252,51,0,0" Background="White" />
        <Button Content="Odlozi termin" HorizontalAlignment="Left"  Width="150px" Height="40px" VerticalAlignment="Top" Margin="427,51,0,0" Background="White" />
    </Grid>
</Page>
