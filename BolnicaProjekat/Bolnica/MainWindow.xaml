<Window x:Class="Bolnica.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Margin="10" Click="Sekretar_Home_Click">SEKRETAR</Button>
            <Button Margin="10" Click="Upravnik_Home_Click">UPRAVNIK</Button>
            <Button Margin="10" Click="Lekar_Home_Click">LEKAR</Button>
            <Button Margin="10" Click="Pacijent_Home_Click">PACIJENT</Button>
        </StackPanel>
    </Grid>
</Window>
