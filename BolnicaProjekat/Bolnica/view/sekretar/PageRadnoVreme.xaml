        <ListView HorizontalAlignment="Left" Height="160" Margin="107,359,0,0" VerticalAlignment="Top" Width="239" ItemsSource="{Binding Odmori}" Name="listaOdmora">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Pocetak" Width="120" DisplayMemberBinding="{Binding Period.Pocetak }" />
                    <GridViewColumn Header="Završetak" Width="120" DisplayMemberBinding="{Binding Period.Kraj}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView HorizontalAlignment="Left" Height="160" Margin="535,359,0,0" VerticalAlignment="Top" Width="125" Name="listaSlobodnihDana" ItemsSource="{Binding slobodniDaniLekara}" >
