        <TextBlock HorizontalAlignment="Left" Margin="74,234,0,0" TextWrapping="Wrap" Text="Datum početka:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="74,274,0,0" TextWrapping="Wrap" Text="Datum završetka:" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="536,194,0,0" TextWrapping="Wrap" Text="Dodaj slobodan dan" VerticalAlignment="Top"/>
        <DatePicker HorizontalAlignment="Left" Margin="535,226,0,0" VerticalAlignment="Top" Name="datumSlobodnogDana"/>
        <Button Content="Dodaj dan" HorizontalAlignment="Left" Margin="664,226,0,0" VerticalAlignment="Top" Width="81" RenderTransformOrigin="-1.536,0.24" Click="DodajSlobodanDan_Click"/>
