                    <GridViewColumn Header="Datum" Width="120" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Obriši dan" HorizontalAlignment="Left" Margin="561,538,0,0" VerticalAlignment="Top" Width="99"/>
