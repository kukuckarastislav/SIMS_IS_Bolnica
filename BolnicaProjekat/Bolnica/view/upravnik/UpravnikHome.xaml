<Window x:Class="Bolnica.view.upravnik.UpravnikHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica.view.upravnik"
        mc:Ignorable="d"
        Title="UpravnikHome" Height="720" Width="1280">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Left" Background="#031e46" Width="Auto">
                <StackPanel Orientation="Vertical">
                    <Border Margin="10 10 10 0" Width="60" Height="60" Background="White" CornerRadius="450">
                        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="upravnik" />
                    </Border>
                    <TextBlock VerticalAlignment="Top" HorizontalAlignment="Center" Foreground="White" Text="Ime" />
                    <Button Margin="6 6 6 6" Click="Prostorije_Click">Rad sa Prostorijama</Button>
                    <Button Margin="6">ToDO</Button>
                    <Button Margin="6">ToDO</Button>
                    <Button Margin="6">ToDO</Button>
                    <Button Margin="6">ToDO</Button>
                </StackPanel>
            </Grid>
            <DockPanel DockPanel.Dock="Right">
                <StackPanel DockPanel.Dock="Top" Height="60" Background="#043987"></StackPanel>
                <Frame DockPanel.Dock="Bottom" x:Name="RadnaPovrsina" NavigationUIVisibility="Hidden"></Frame>
            </DockPanel>
          
        </DockPanel>
    </Grid>
</Window>
