<Window x:Class="Bolnica.view.pacijent.SopstveniPregledi"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica.view.pacijent"
        mc:Ignorable="d"
        Title="SopstveniPregledi" Height="450" Width="800">
    <Grid>
        <ListView ListViewItem.MouseDoubleClick="pregled_odabran" ItemsSource="{Binding PreglediPacijenta}" x:Name="listaPregledaPacijenta" >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Ustanova" DisplayMemberBinding="{Binding NazivZdrastveneUstanove }"/>
                    <GridViewColumn Header="Tip pregleda" DisplayMemberBinding="{Binding TipPregleda }"/>

                    <GridViewColumn Header="Komentar" DisplayMemberBinding="{Binding Komentar}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Click="otkazi_pregled" Margin="231,364,420,23" RenderTransformOrigin="0.097,0.562">Otkazi</Button>
        <Button Click="modifikuj_pregled" Margin="429,364,222,23" RenderTransformOrigin="0.667,0.361">Modifikuj</Button>
    </Grid>
</Window>
