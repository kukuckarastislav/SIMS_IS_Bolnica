<Page x:Class="Bolnica.view.sekretar.PageRadnoVreme"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Bolnica.view.sekretar"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="PageRadnoVreme">

    <Grid Background="#ccffbd">
        <DatePicker HorizontalAlignment="Left" Margin="180,226,0,0" VerticalAlignment="Top" Name="datumOdmoraPocetak" />
        <DatePicker HorizontalAlignment="Left" Margin="180,270,0,0" VerticalAlignment="Top" Name="datumOdmoraKraj" />
