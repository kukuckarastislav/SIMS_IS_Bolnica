<Window x:Class="Bolnica.view.lekar.LekarHome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bolnica.view.lekar"
        mc:Ignorable="d"
        Title="LekarHome" Height="750" Width="430"
        Background="FloralWhite" FontFamily="Century Gothic" FontSize="8">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" VerticalAlignment="Top" 
                  Background="#9E222F" Height="125">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Grid>
                        <Grid.ColumnDefinitions>

                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="12"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="15"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="Zdravo Bolnica" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" 
                               FontWeight="Bold" TextDecorations=""
                               Foreground="White"
                               FontSize="10"
                               Grid.Row="0" Grid.RowSpan="1"
                               Grid.Column="1" Grid.ColumnSpan="2"    
                               />

                        <TextBlock Text="Ime Prezime" 
                               VerticalAlignment="Center" HorizontalAlignment="Center" 
                               FontWeight="Bold" TextDecorations=""
                               Foreground="White"
                               FontSize="11"
                               Grid.Row="5" Grid.RowSpan="1"
                               Grid.Column="1" Grid.ColumnSpan="2"    
                               />

                        <Image Source="/images/zdravo-bolnica.png"
                               HorizontalAlignment="Center"
                               Margin="0,0,35,5"
                               Grid.Row="1" Grid.RowSpan="2"
                               Grid.Column="0" Grid.ColumnSpan="3"   
                              
                               />



                        <Image Source="/images/doctor-male-to-right.png"
                               HorizontalAlignment="Center"
                               Grid.Row="1" Grid.RowSpan="3"
                               Grid.Column="1" Grid.ColumnSpan="2"    
                               />


                        <Button Grid.Column="8" Grid.ColumnSpan="1"
                                Grid.Row="1" Grid.RowSpan="2"
                                Content="Meni" FontWeight="DemiBold"
                                
                                FontSize="25" Margin="-25,0,0,10"
                                Background="#9E222F"
                                Foreground="White"
                                Click="MedicinskiKarton_Click"
                                BorderBrush="white"
                                BorderThickness="2"
                                />

                        <Button Grid.Column="5" Grid.ColumnSpan="2"
                                Grid.Row="1" Grid.RowSpan="2"
                                Content="Pacijenti" FontWeight="DemiBold"
                                
                                FontSize="25" Margin="-25,0,0,10"
                                Background="#9E222F"
                                Foreground="White"
                                Click="Pacijenti_Click"
                                BorderBrush="white"
                                BorderThickness="2"
                                />

                    </Grid>
                </StackPanel>
            </Grid>
            <Frame DockPanel.Dock="Bottom" x:Name="RadnaPovrsinaLekar" NavigationUIVisibility="Hidden" ></Frame>
        </DockPanel>
    </Grid>
</Window>
